Subject: [PATCH 1/1] depend on elogind instead of systemd

---
 configure.ac                        | 2 +-
 src/backends/native/meta-launcher.c | 2 +-
 src/core/main.c                     | 2 +-
 3 files changed, 3 insertions(+), 3 deletions(-)

diff --git a/configure.ac b/configure.ac
index 42d7f6b..f170691 100644
--- a/configure.ac
+++ b/configure.ac
@@ -189,7 +189,7 @@ AC_SUBST(XWAYLAND_PATH)
 
 PKG_CHECK_MODULES(MUTTER, $MUTTER_PC_MODULES)
 
-MUTTER_NATIVE_BACKEND_MODULES="clutter-egl-1.0 libdrm libsystemd libinput gudev-1.0 gbm >= 10.3"
+MUTTER_NATIVE_BACKEND_MODULES="clutter-egl-1.0 libdrm libelogind libinput gudev-1.0 gbm >= 10.3"
 
 AC_ARG_ENABLE(native-backend,
   AS_HELP_STRING([--disable-native-backend], [disable mutter native (KMS) backend]),,
diff --git a/src/backends/native/meta-launcher.c b/src/backends/native/meta-launcher.c
index 824f918..1ba8dc2 100644
--- a/src/backends/native/meta-launcher.c
+++ b/src/backends/native/meta-launcher.c
@@ -36,7 +36,7 @@
 #include <string.h>
 #include <unistd.h>
 
-#include <systemd/sd-login.h>
+#include <elogind/sd-login.h>
 #include <gudev/gudev.h>
 
 #include "dbus-utils.h"
diff --git a/src/core/main.c b/src/core/main.c
index c99ede5..cb434aa 100644
--- a/src/core/main.c
+++ b/src/core/main.c
@@ -83,7 +83,7 @@
 # endif
 
 #if defined(HAVE_NATIVE_BACKEND) && defined(HAVE_WAYLAND)
-#include <systemd/sd-login.h>
+#include <elogind/sd-login.h>
 #endif
 
